
<div class ="panel-body">
  <div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="scheduled-status">
      <thead>
        <tr>
          <th>Job ID</th>
          <th>Customer Name</th>
          <th>Model Number</th>
          <th>Created Date</th>
        </tr>
        <tbody>
          <% @jobs.each do |job| %>
          <% customer=Customer.find(job.customer_id) %>
          <tr>
            <td><%=link_to job.id, customer_job_path(job.customer_id, job) %></td>
            <td><%=link_to "#{customer.first_name} #{customer.last_name}", customer_path(job.customer_id) %></td>
            <td><%=link_to job.model_num, customer_job_path(job.customer_id, job) %></td>
            <td><%=link_to job.created_at, customer_job_path(job.customer_id, job) %></td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  </div>
</div>
