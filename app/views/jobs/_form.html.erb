<div clas="container" style="padding: 1em">
<h3>Customer</h3>
<%= link_to "#{@customer.first_name} #{@customer.last_name}", customer_path(@customer, @job) %>
<h3>Job Info</h3>
<div class="row">
  <div class="col-xs-6" "col-md-4">
    <%= form_for [ @customer,@job] do |f| %>
    <%= f.label :brand%>
    <%= f.text_field :brand, class: "form-control" %>

    <%= f.label :model_num %>
    <%= f.text_field :model_num, class: "form-control" %>

    <%= f.label :purchase_date %>
    <%= f.text_field :purchase_date, class: "form-control purchase_date" %>

    <%= f.label :scheduled_date %>
    <%= f.text_field :scheduled_date, class: "form-control scheduled_date" %>
  </div>
  <div class="col-xs-6" "col-md-4">
    <div class="form-group" style="margin :0">
      <label>Created at</label>
      <div class="form-control">
        <%= @job.created_at%>
      </div>
    </div>
    <%= f.label :serial_num %>
    <%= f.text_field :serial_num, class: "form-control" %>

    <%= f.label :warranty %>
    <%= f.text_field :warranty, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <%= f.label :note %>
    <%= f.text_area :note, :rows=>5, :cols => 100 %>
  </div>
</div>
<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <%= f.label :performed %>
    <%= f.text_area :performed, :rows=>5, :cols => 100 %>
  </div>

</div>
<%= f.submit %>
<span>last updated at: <%= @job.updated_at %></span>
<%end%>
</div>
